//Swapping without 3rd variable
#include<stdio.h>
main()
{
	int x,y;
	printf("enter the 2 variables x and y\n");
	scanf("%d %d",&x,&y);
	printf("values of x and y before swap are %d %d\n",x,y);
	//for instance x is 9 and y is 10
	x=x+y;//x=9+10=19
	y=x-y;//y=19-10=9
	x=x-y;//x=19-9=10
	printf("Values x and y after swap are %d %d",x,y);
	return 0;
}
